awk '{print NF, $0}' dukeofyork.txt # Print number of fields 
awk '{print $0}' dukeofyork.txt # Print all line and fields
awk '/up/{print NF, $0}' dukeofyork.txt  # Print only include the "UP" word . up -here regular expressions. First part regular expression second part in action
awk 'NF==6{print NF, $0}' dukeofyork.txt  # In this case, it prints only those lines that have exactly six fields.
awk 'NF==6' dukeofyork.txt  # Only regex part
awk '/up/{print "UP:" NF, $0 } /down/{print "DOWN: ", NF, $0}' dukeofyork.txt
awk -f swap names.txt # -f flag (indicate file) 
awk -F , '{print $2} names.txt # -F option field separator
awk -F t '{print $2}'  # -t option indicate tab option
{ awk -v hi=HELLO '{print $1, hi}'
hello awk
hello HELLO
nice to meet you
nice HELLO}

awk '{print "("NF")" , $0 }' names.txt # $0 is the entire record, and NF wrapped in parentheses will add the number of fields surrounded within parentheses.
{awk -F '[,!]' '{print $2}'
one!two,dsfd
two}

{awk '{FS="," ; print $2}'
one.,two,three

four,five,six
five
}    # Start printing seconf line

{awk 'BEGIN{FS=","} {print $2}'
one.,two,six
two
fource,five,six
five }  # Start printing beginnings of the line 

#RS=record separator, FS=fields separator

